<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sentence_input"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.names_paul.wordcounter.WordCounterActivity">

    <TextView
        android:id="@+id/answer"
        android:layout_width="221dp"
        android:layout_height="118dp"
        android:text="@string/answer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1" />

    <Button
        android:id="@+id/count_words"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="@string/count_words"
        app:layout_constraintTop_toBottomOf="@+id/answer"
        tools:layout_editor_absoluteX="113dp" />

    <EditText
        android:id="@+id/sentence_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/sentence_input"
        app:layout_constraintTop_toBottomOf="@+id/count_words"
        tools:layout_editor_absoluteX="84dp" />

</android.support.constraint.ConstraintLayout>
